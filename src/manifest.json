{
  "manifest_version": 3,
  "name": "Wall-E",
  "version": "0.1.0",
  "description": "Wall-E Copilot side panel extension.",
  "permissions": ["sidePanel", "storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": [
    "http://localhost:3033/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.wellfound.com/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/job-listing/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.wellfound.com/jobs/*"
      ],
      "js": ["src/content/job-detector.ts"],
      "run_at": "document_idle"
    }
  ]
}
